<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="keywords" content="Super Heroes Inc., superheroes, citizen safety, drop crime rates, villains" />
    <title>@ViewBag.Title</title>

    <link href='http://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500italic,500,700,700italic,900,900italic' rel='stylesheet' type='text/css'>
    <!-- Bootstrap -->
    <link href="~/content/css/bootstrap.min.css" rel="stylesheet">
    <!-- FontAwesome -->
    <link rel="stylesheet" href="~/content/css/font-awesome.min.css">
    <!-- MaterialCSS -->
    <link rel="stylesheet" href="~/content/css/material.min.css">
    <!-- RipplesCSS -->
    <link rel="stylesheet" href="~/content/css/ripples.min.css">

    <!-- ThemeCSS & Responsive CSS -->
    <link rel="stylesheet" href="~/content/style.css">
    <link rel="stylesheet" href="~/content/css/responsive.css">
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    @RenderSection("styles", false)
    <link href="~/Content/css/custom.css" rel="stylesheet" />
</head>
<body>

    <header class="header">
        <div data-velocity="-.4" id="particles" class="header-bg"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="social-links">
                        <a class="btn social-link" href="javascript:void(0)"><i class="fa fa-facebook"></i> <div class="ripple-wrapper"></div></a>
                        <a class="btn social-link" href="javascript:void(0)"><i class="fa fa-twitter"></i> <div class="ripple-wrapper"></div></a>
                        <a class="btn social-link" href="javascript:void(0)"><i class="fa fa-instagram"></i> <div class="ripple-wrapper"></div></a>
                    </div>
                </div>
            </div>
        </div>

        <div class="site-title-table">
            <div class="site-title-tablecell">
                <div class="slide-text">
                    <h2><a href="@Url.Action("Index", "Home")"><span>S</span>uper<span>H</span>eros, <span>I</span>nc.</a></h2>
                    <p>Promoting Citizen Safety through Education</p>
                </div>
            </div>
        </div>
    </header>

    <section class="maincontent-wrap">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="maincotnent shadow-z-1">
                        <div class="mainmenu">
                            <div class="navbar navbar-nobg">
                                <div class="navbar-header">
                                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                        <span class="sr-only">Toggle navigation</span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                    </button>
                                </div>
                                <div class="navbar-collapse collapse">
                                    <ul id="mainnav" class="nav navbar-nav">
                                        <li class="navli"><a href="@Url.Action("Index", "Home")">Our Mission <div class="ripple-wrapper"></div></a></li>
                                        <li class="navli"><a href="@Url.Action("Calendar", "Home")">Calendar</a></li>
                                        <li class="navli"><a href="@Url.Action("Contact", "Home")">Contact</a></li>
                                        @if (Request.IsAuthenticated)
                                        {
                                            <li class="navli"><a href="@Url.Action("Index", "Characters")">All Heroes</a></li>
                                            <li class="navli"><a href="@Url.Action("Index", "Cours")">All Courses</a></li>
                                            <li class="navli"><a href="@Url.Action("Index", "CourseTypes")">Course Types</a></li>
                                            <li class="navli"><a href="@Url.Action("Index", "Locations")">Course Locations</a></li>
                                            if (User.IsInRole("Admin"))
                                            {
                                                <li class="navli"><a href="@Url.Action("Index", "CourseCharacters")">Assign Instructors</a></li>
                                            }
                                        }
                                        @Html.Partial("_LoginPartial")
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-10 col-md-offset-1">
                                <div class="article-list">

                                    @RenderBody()


                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer class="footer">
        <div class="container">


            <div class="row">
                <div class="col-md-12">
                    <div class="footer-bottom">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="copyright-text">
                                    <p>© 2015 Avengers - All Rights Reserved. Coded with <i class="fa fa-heart"></i> by <a href="http://wpexpand.com" target="_blank">WP Expand</a></p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="social-links footer-social-links">
                                    <a class="btn social-link" href="javascript:void(0)"><i class="fa fa-facebook"></i> <div class="ripple-wrapper"></div></a>
                                    <a class="btn social-link" href="javascript:void(0)"><i class="fa fa-twitter"></i> <div class="ripple-wrapper"></div></a>
                                    <a class="btn social-link" href="javascript:void(0)"><i class="fa fa-instagram"></i> <div class="ripple-wrapper"></div></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>


    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="~/content/js/vendor/jquery-1.11.2.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="~/content/js/bootstrap.min.js"></script>
    <script src="~/content/js/material.min.js"></script>
    <script src="~/content/js/ripples.min.js"></script>
    <script src="~/content/js/jquery.scrolly.js"></script>
    <script src="~/content/js/jquery.particleground.min.js"></script>
    <script src="~/content/js/main.js"></script>
    @RenderSection("scripts", false)
</body>
</html>