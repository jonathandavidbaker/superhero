@model IEnumerable<SuperHero.DATA.EF.CourseCharacter>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Assign Instructor to New Course", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Character.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cours.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Character.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cours.Name)
        </td>
        <td>
            @if (User.IsInRole("Admin"))
                {
                @Html.ActionLink("Edit", "Edit", new { id = item.CourseCharacterID }) @:|
                }
            @Html.ActionLink("Details", "Details", new { id = item.CourseCharacterID })
            @if (User.IsInRole("Admin"))
                {
                @:| @Html.ActionLink("Delete", "Delete", new { id = item.CourseCharacterID })
                }

        </td>
    </tr>
}

</table>
